source! "~/.vimperatorrc.local"

" vim: set ft=vimperator:
nnoremap j 4j
nnoremap k 4k

" S-b,S-fに戻る,進むを割り当てる
nnoremap <S-b> <S-h>
nnoremap <S-f> <S-l>

" S-h,S-lに前のタブ,次のタブを割り当てる
map <C-h> <C-PageUp>
map <C-l> <C-PageDown>

" タブを閉じる
map <S-d> d

nnoremap <S-K> <C-P>
nnoremap <S-J> <C-N>

cnoremap <C-N> <Up>
cnoremap <C-P> <Down>

set hlsearch
nnoremap <Esc><Esc> :nohlsearch<Cr>

hi CmdLine              -a font-size:2.5em; font-weight:bold; color:#527BBD;
hi CompItem[selected]   -a background: light-gray;
hi CompTitle            -a color:blue;
hi Hint z-index:5000; font-family:monospace; font-size:1em; color:white; background-color:blue; border-color:ButtonShadow; border-width:0px; border-style:solid; padding:0px 1px 0px 1px; position:absolute; text-transform: uppercase;

set hintchars=hjklasdfgyuiopqwertnmzxcvb 
